@model Sesotho_Readability_Tool.Models.ReadabilityResult
@{
    ViewData["Title"] = "Sesotho Readability Tool";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <h1 class="mb-4 text-center">Sesotho Readability Tool</h1>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-controller="Home" asp-action="Analyze" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="textInput" class="form-label">Enter text</label>
            <textarea id="textInput" name="Text" class="form-control" rows="6">@Html.Raw(System.Net.WebUtility.HtmlEncode(Model?.InputText))</textarea>


        </div>

        <div class="mb-3">
            <label for="fileInput" class="form-label">Or upload a text file</label>
            <input type="file" id="fileInput" name="file" class="form-control" accept=".txt">
        </div>

        <button type="submit" class="btn btn-primary w-100">Analyze Readability</button>
    </form>

    @if (Model != null)
    {
        <div class="card mt-4 p-3 shadow-sm">
            <h5 class="card-title">Readability Analysis</h5>
            <ul class="list-group list-group-flush mt-2">
                <li class="list-group-item">Total Words: @Model.TotalWords</li>
                <li class="list-group-item">Difficult Words: @Model.DifficultWords</li>
                <li class="list-group-item">DCI Score: @Model.DCI</li>
                <li class="list-group-item">Difficult Words: @string.Join(", ", Model.DifficultWordList)</li>
            </ul>
        </div>
    }
</div>
